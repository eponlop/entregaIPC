<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPanePrincipal" prefWidth="600.0" stylesheets="@../resources/stylesheets/HojaEstilo_Contenedor.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlador.GestionGastoController">
   <center>
      <BorderPane styleClass="root">
         <center>
            <VBox fx:id="contenedorTabla" fillWidth="false" BorderPane.alignment="TOP_LEFT">
               <children>
                  <TableView fx:id="tablaGastos" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="columnaNombre" editable="false" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="125.0" resizable="false" text="Nombre" />
                      <TableColumn fx:id="columnaDescripcion" editable="false" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="100.0" text="Descripcion" />
                        <TableColumn fx:id="columnaCategoria" editable="false" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="125.0" resizable="false" text="Categoría" />
                        <TableColumn fx:id="columnaCoste" editable="false" maxWidth="1.7976931348623157E308" minWidth="-1.0" resizable="false" text="Coste" />
                        <TableColumn fx:id="columnaFecha" editable="false" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="120.0" resizable="false" text="Fecha" />
                    </columns>
                     <VBox.margin>
                        <Insets right="5.0" />
                     </VBox.margin>
                  </TableView>
               </children>
               <BorderPane.margin>
                  <Insets bottom="30.0" left="20.0" />
               </BorderPane.margin>
            </VBox>
         </center>
         <right>
            <VBox alignment="TOP_CENTER" prefWidth="100.0" BorderPane.alignment="TOP_CENTER">
               <children>
                  <Button fx:id="añadirButton" mnemonicParsing="false" onMouseClicked="#añadirGasto" styleClass="button-task" text="Añadir" />
                  <Button mnemonicParsing="false" styleClass="button-task" text="Editar">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" styleClass="button-task" text="Eliminar">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
                  <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></VBox>
                  <Button mnemonicParsing="false" styleClass="button-task" text="Visualizar">
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" styleClass="button-task" text="Imprimir">
                     <VBox.margin>
                        <Insets bottom="30.0" />
                     </VBox.margin>
                  </Button>
               </children>
               <BorderPane.margin>
                  <Insets left="10.0" right="20.0" />
               </BorderPane.margin>
            </VBox>
         </right>
         <BorderPane.margin>
            <Insets left="10.0" top="20.0" />
         </BorderPane.margin>
      </BorderPane>
   </center>
</BorderPane>
