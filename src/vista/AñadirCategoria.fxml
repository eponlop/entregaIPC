<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox styleClass="root-2" stylesheets="@../resources/stylesheets/HojaEstilo.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlador.AñadirCategoriaController">
   <children>
      <VBox maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
      <VBox>
         <children>
            <HBox maxHeight="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
            <VBox prefHeight="70.0" VBox.vgrow="NEVER">
               <children>
                  <Label styleClass="texto-head" text="Nombre de la categoria" textFill="#489fea">
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="nombreText" maxWidth="-Infinity" prefHeight="26.0" prefWidth="125.0" />
               </children>
            </VBox>
            <VBox prefHeight="70.0" VBox.vgrow="NEVER">
               <children>
                  <Label styleClass="texto-head" text="Descripción de la categoria" textFill="#489fea">
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="descripcionText" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="26.0" prefWidth="250.0" />
               </children>
            </VBox>
            <HBox alignment="BOTTOM_LEFT" maxHeight="-Infinity" prefHeight="100.0">
               <children>
                  <VBox maxWidth="1.7976931348623157E308" prefWidth="250.0" />
                  <Button fx:id="aceptarButton" mnemonicParsing="false" onMouseClicked="#guardarCategoria" styleClass="button-bold" text="Aceptar" />
                  <Button fx:id="cancelarButton" mnemonicParsing="false" onMouseClicked="#cancelar" styleClass="button-normal" text="Cancelar">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox maxHeight="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="10.0" left="40.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <VBox maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
   </children>
</HBox>
